{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RealtimeResult",
  "type": "object",
  "required": [
    "job_id",
    "timestamp",
    "job_type",
    "severity",
    "intent",
    "estimated_cost_gb",
    "risk",
    "status"
  ],
  "properties": {
    "job_id": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "job_type": { "type": "string" },
    "severity": {
      "type": "string",
      "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"]
    },
    "intent": { "type": "string" },
    "estimated_cost_gb": {
      "type": "number",
      "minimum": 0
    },
    "risk": {
      "type": "string",
      "enum": ["LOW", "MEDIUM", "HIGH"]
    },
    "session_id": {
      "type": ["string", "null"]
    },
    "status": {
      "type": "string",
      "enum": ["REALTIME"]
    }
  }
}
